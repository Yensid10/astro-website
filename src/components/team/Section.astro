---
const {bgClass, className} = Astro.props;
---
{
    bgClass &&
    <div class={bgClass}>
        <Astro.self className={className}>
            <slot/>
        </Astro.self>
    </div>
}
{
    !bgClass &&
    <div class={"container mx-auto lg:max-w-5xl px-10 " + className}>
        <slot/>
    </div>
}
