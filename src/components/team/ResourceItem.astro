---
const {name, description, link} = Astro.props;
---
<div class="flex items-center">
  <div class="grow flex flex-col space-y-4">
    <a href={link} target="_blank" class="text-lg col-span-2">{name}</a>
    <p>{description}</p>
  </div>
  <a href={link} target="_blank"
    class="shrink-0 rounded-full bg-zinc-800 w-20 h-max px-3 py-3 flex justify-center">
    View
  </a>
</div>
<hr class="border-black my-5 col-span-2" />
