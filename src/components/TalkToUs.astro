---
import Section from '@components/Section.astro'
import { Image } from '@astrojs/image/components'
---

<Section className='text-black py-20 md:py-40'>
  <div
    class='flex flex-col-reverse items-center md:flex-row justify-center gap-10 md:gap-16'
  >
    <div class='flex flex-col gap-4 text-center md:text-left'>
      <div class='text-5xl md:text-6xl font-bold'>Contact us</div>
      <div class='text-2xl md:text-3xl font-light'>info@juxt.pro</div>
      <div class='text-2xl md:text-3xl font-light'>
        +44 (0) 333 93 98 309 <br /> +1 (332) 867 0718
      </div>
    </div>
    <Image
      alt='image'
      width={400}
      quality={80}
      class='w-40 md:w-60'
      src={import('../assets/site/airplane.png')}
    />
  </div>
</Section>
